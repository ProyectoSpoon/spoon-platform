{
  "name": "spoon-platform",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "test:all": "jest",
    "test": "jest",
    "test:mesas": "jest --config jest.config.mesas.js",
    "test:mesas:watch": "jest --config jest.config.mesas.js --watch",
  "test:mesas:coverage": "jest --config jest.config.mesas.js --coverage",
  "test:setup": "jest packages/shared/__tests__/setup/config.test.ts",
  "db:snapshot:generate": "tsx scripts/db/generate-snapshot.ts",
  "db:snapshot:compare": "tsx scripts/db/compare-snapshot.ts",
  "db:snapshot": "npm run db:snapshot:generate && npm run db:snapshot:compare"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
  "ts-jest": "^29.4.1",
    "turbo": "^1.13.0",
  "typescript": "^5.0.0",
  "@types/pg": "^8.11.6",
  "tsx": "^4.19.1",
  "diff": "^5.2.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.52.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
  "dotenv": "^16.4.5",
  "pg": "^8.11.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^3.3.1"
  }
}
